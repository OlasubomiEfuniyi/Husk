#include <stdio.h>
#include <stdlib.h>
#include "Parser/tree.h"
#include "Parser/parser.h"
#include "Executor/executor.h"

#define PROMPT "Husk $$ "

int main(void) {
  Tree *tree = NULL;
  
  /* Run shell until it is terminated by a command */
  while(1) {
    fprintf(stdout, PROMPT);

    tree = parse();
    execute(tree);

    destroy_tree(tree);
    free(tree);
  }
  
  return 0;
}
